{
    "$schema": "https://railway.com/railway.schema.json",
    "services": {
      "backend": {
        "build": {
          "builder": "DOCKERFILE",
          "dockerfilePath": "backend/Dockerfile",
          "context": "backend"
        },
        "deploy": {
          "region": "us-west2",
          "numReplicas": 1,
          "sleepApplication": false,
          "restartPolicyType": "ON_FAILURE",
          "restartPolicyMaxRetries": 10
        }
      },
      "frontend": {
        "build": {
          "builder": "DOCKERFILE",
          "dockerfilePath": "frontend/Dockerfile",
          "context": "frontend"
        },
        "deploy": {
          "region": "us-west2",
          "numReplicas": 1,
          "sleepApplication": false,
          "restartPolicyType": "ON_FAILURE",
          "restartPolicyMaxRetries": 10
        }
      }
    }
  }
  